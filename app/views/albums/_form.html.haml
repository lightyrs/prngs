= form_for(@album) do |f|
  - if @album.errors.any?
    #error_explanation
      %h2
        = pluralize(@album.errors.count, "error")
        prohibited this album from being saved:
      %ul
        - @album.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :artist_id
    %br/
    = f.number_field :artist_id
  .field
    = f.label :label_id
    %br/
    = f.number_field :label_id
  .field
    = f.label :rdio_url
    %br/
    = f.text_field :rdio_url
  .field
    = f.label :spotify_url
    %br/
    = f.text_field :spotify_url
  .actions
    = f.submit
