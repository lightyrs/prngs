= form_for(@label) do |f|
  - if @label.errors.any?
    #error_explanation
      %h2
        = pluralize(@label.errors.count, "error")
        prohibited this label from being saved:
      %ul
        - @label.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :rdio_url
    %br/
    = f.text_field :rdio_url
  .actions
    = f.submit
