= form_for(@source) do |f|
  - if @source.errors.any?
    #error_explanation
      %h2
        = pluralize(@source.errors.count, "error")
        prohibited this source from being saved:
      %ul
        - @source.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .field
    = f.label :kind
    %br/
    = f.text_field :kind
  .actions
    = f.submit
