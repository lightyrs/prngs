- content_for(:heading) do
  %h1 Listing sources

%table
  %tr
    %th Name
    %th Url
    %th Kind
    %th
    %th
    %th
  - @sources.each do |source|
    %tr
      %td= source.name
      %td= source.url
      %td= source.kind
      %td= link_to 'Show', source
      %td= link_to 'Edit', edit_source_path(source)
      %td= link_to 'Destroy', source, confirm: 'Are you sure?', method: :delete
%br/
= link_to 'New Source', new_source_path

= javascript_tag backbone_router("sources", @sources)